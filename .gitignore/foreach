syntax:
  foreach($array as $value)
  {
  statement;
  }
  (or)
  foreach($array as $key=>$value)
  {
  statement;
  }
  
  <html><head><title></title></head>
  <body>
  <?php
  $ages=array(2,4,6,8,10,12,14);
foreach($ages as $age)
{
  echo "Age is:{$age}<br/>";
}
echo "<br/>";
  $person=array(
  "fname"=>"Deepa",
  "lname"=>"Karuppusamy",
  "address"=>"Karur"
);
foreach($person as $attri=>$data)
{
  $attri_nice=ucwords(str_replace("_","",$attri));
  echo "{$attri_nice}:{$data}<br/>";
}
  ?>
  </body></html>
