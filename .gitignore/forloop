syntax:
  for(expression1;expression2;expression3)
  {
  statement;
  }
  
  <html><head><title></title></head>
  <body>
  <?php   
for($count=0;$count<=10;$count++)
{
  echo $count.",";
}
echo "<br/>";
for($count=20;$count>0;$count--)
{
  if($count%2==0)
    {
      echo "{$count} is even.<br/>";
    }
  else
    {
      echo "{$count} is odd.<br/>";
    }
}

?>
  </body></html
